{
    "extends": [
      "tslint-eslint-rules"
    ],
    "linterOptions": {
      "exclude": [
        "**/swagger/**/*.ts"
      ]
    },
    "rulesDirectory": [
      "node_modules/codelyzer"
    ],
    "rules": {
      "array-bracket-spacing": [true, "never"],
      "callable-types": true,
      "class-name": true,
      "comment-format": [
        true,
        "check-space"
      ],
      "curly": true,
      "eofline": true,
      "forin": true,
      "import-destructuring-spacing": true,
      "import-spacing": true,
      "indent": [
        true,
        "spaces",
        4
      ],
      "interface-over-type-literal": false,
      "label-position": true,
      "max-line-length": [
        true,
        140
      ],
      "member-access": false,
      "member-ordering": [
          true,
          {
            "order": [
              "static-field",
              "instance-field",
              "constructor",
              "public-instance-method",
              "protected-instance-method",
              "private-instance-method"
            ]
          }
        ],
      "no-arg": true,
      "no-bitwise": true,
      "no-consecutive-blank-lines": [true, 1],
      "no-console": [
        true,
        "debug",
        "info",
        "time",
        "timeEnd",
        "trace"
      ],
      "no-construct": true,
      "no-debugger": true,
      "no-duplicate-variable": true,
      "no-empty": false,
      "no-empty-interface": true,
      "no-eval": false,
      "no-multi-spaces": [
        true
      ],
      "no-shadowed-variable": true,
      "no-string-literal": false,
      "no-string-throw": true,
      "no-switch-case-fall-through": true,
      "no-trailing-whitespace": true,
      "no-unused-expression": true,
      "no-var-keyword": true,
      "object-curly-spacing": [true,"always"],
      "object-literal-sort-keys": false,
      "one-line": [
        true,
        "check-open-brace",
        "check-catch",
        "check-else",
        "check-whitespace"
      ],
      "quotemark": [
        true,
        "single"
      ],
      "radix": true,
      "semicolon": [
        true,
        "always"
      ],
      "triple-equals": [
        true,
        "allow-null-check"
      ],
      "typedef-whitespace": [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        }
      ],
      "unified-signatures": true,
      "variable-name": false,
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
      ],

      "directive-selector": [true, "attribute", "app", "edci", "camelCase"],
      "no-input-rename": true,
      "no-output-rename": true,
      "use-pipe-transform-interface": true,
      "component-class-suffix": true,
      "directive-class-suffix": true,
      "no-access-missing-member": false,
      "component-selector": [true, "element", "app", "edci", "kebab-case"],
      "no-forward-ref": false,
      "pipe-prefix": [true, "camelCase", "edci", "app"]
    }
  }

