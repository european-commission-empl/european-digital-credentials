{
    "name": "eui-angular-app",
    "version": "1.0.0",
    "license": "EUPL-1.1",
    "scripts": {
        "ng": "ng",
        "e2e": "ng e2e",
        "stylelint": "stylelint \"src/**/*.scss\"",
        "tslint": "tslint \"src/**/*.ts\"",
        "lint": "npm run tslint -- --fix && npm run stylelint -- --fix",
        "lint-prod": "npm run tslint-prod && npm run stylelint-prod",
        "tslint-prod": "tslint --fix \"src/**/*.ts\"",
        "stylelint-prod": "stylelint --fix \"src/**/*.scss\"",
        "clean": "rimraf out-tsc dist packages/**/dist/** packages/**/out-tsc/** packages/**/src/lib/**/*.js packages/**/src/lib/**/*.js.map",
        "start-serve": "eui-scripts serve-app --configuration=proxy-mock",
        "start": "npm run clean && npm-run-all --parallel start-serve",
        "start-proxy": "npm run clean && eui-scripts serve-app --configuration=proxy",
        "start-openid": "npm run clean && eui-scripts serve-app --configuration=local-openid",
        "build": "eui-scripts build-app --skipTest",
        "build-qa-tomcat": "eui-scripts build-app  --skipTest --configuration=qatomcat",
        "build-acceptance": "eui-scripts build-app --skipTest --configuration=acceptance",
        "build-local-tomcat": "eui-scripts build-app --skipTest --configuration=localtomcat",
        "build-prod": "eui-scripts build-app --skipTest --configuration=production",
        "no-branding": "eui-scripts build-app --skipTest --configuration=no-branding",
        "build-prod-ci": "ncp tsconfig-ci.json tsconfig.json && npm run build-prod",
        "pkg:init": "eui-cli -m",
        "pkg:clean": "eui-scripts clean-package",
        "pkg:clean-all": "eui-scripts clean-all",
        "pkg:test": "eui-scripts test-package",
        "pkg:build": "eui-scripts build-package",
        "pkg:build-deps": "eui-scripts build-deps",
        "pkg:build-all": "eui-scripts build-all",
        "pkg:build-element": "eui-scripts build-element",
        "build-prod:all": "npm run pkg:build-all && npm run build",
        "pkg:publish": "eui-scripts publish",
        "pkg:publish-all": "eui-scripts publish-all",
        "generate-changelog": "eui-scripts generate-changelog",
        "compodoc": "compodoc -p src/tsconfig.app.json",
        "build:stats": "ng build --stats-json",
        "stats": "webpack-bundle-analyzer dist/stats.json",
        "sonar": "sonar-scanner"
    },
    "private": true,
    "dependencies": {
        "@eui/deps-base": "7.19.1",
        "html2canvas": "^1.0.0-rc.3"
    },
    "devDependencies": {
        "@compodoc/compodoc": "1.1.9",
        "karma": "3.1.4",
        "karma-chrome-launcher": "2.2.0",
        "karma-cli": "2.0.0",
        "karma-coverage": "1.1.2",
        "karma-coverage-istanbul-reporter": "2.0.5",
        "karma-html-reporter": "0.2.7",
        "karma-jasmine": "2.0.1",
        "karma-jasmine-html-reporter": "1.4.2",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-remap-coverage": "0.1.5",
        "karma-sourcemap-loader": "0.3.7",
        "sonar-scanner": "^3.1.0",
        "webpack-bundle-analyzer": "^3.4.1"
    }
}
